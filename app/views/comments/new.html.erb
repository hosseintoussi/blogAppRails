<%= form_for([@article, @article.comments.new]) do |f| %>
                <div class="well">
                    <h4>Leave a Comment:</h4>
                    <form role="form">
                        <div class="form-group">
                                <%= f.text_area :body, :class =>"form-control", :rows => "3" %>
                        </div>
                        <button type="submit" class="btn btn-primary">Comment</button>
                    </form>
                </div>
<% end %>