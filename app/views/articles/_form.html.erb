<script src="//cdn.ckeditor.com/4.4.7/full/ckeditor.js"></script>
<%= form_for(@article) do |f| %>
<% if @article.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

  <ul>
    <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
  <form role="form">
<div class="form-group">
  <%= f.text_field :title, :class =>"form-control", :placeholder => "Title"%>
</div>
<div class="form-group">
  <%= f.text_area :body, :id =>"body", :class =>"form-control", :rows => "20" %>
</div>
<div class="form-group">
  <%= f.text_field :excerpt, :class =>"form-control",:width => "50", :placeholder => "Excerpt" %>
</div>
<div class="form-group">
  <%= f.text_field :location, :class =>"form-control", :placeholder => "Location" %>
</div>
<div class="form-group">
  <%= f.label "Categories" %><br />
  <% Category.all.each do |category| %>
  <%= check_box_tag 'article[category_ids][]', category.id,
  @article.category_ids.include?(category.id), id: dom_id(category) %>
  <%= label_tag dom_id(category), category.name, class: "check_box_label" %>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :published_at %><br>
  <%= f.datetime_select :published_at %>
</div>
<button type="submit" class="btn btn-primary">Create</button>
</form>
<% end %>
