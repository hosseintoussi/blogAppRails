<%= div_for article do %>
<h3>
		<% if article.owned_by? current_user %>
	<span class='actions'>
		<%= link_to "Edit", edit_article_path(article) %>
		<%= link_to "Delete", article, confirm: "Are you sure?", method: :delete %>
	</span>
	<% end %>
	<h2><%= article.title %></h2>
        <p><span class="glyphicon glyphicon-time"></span> Published at <%= article.published_at %></p>
        <hr>
        <p class="lead">
        <%= @article.excerpt %>
        </p>
</h3>
<%= article.body.html_safe  %>
<% end %>