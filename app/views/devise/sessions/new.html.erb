<h2>Log in</h2>

<%= form_for resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'uk-form'} do |f| %>
  <form class="uk-form">
  <div class="uk-form-row">
    <%= f.email_field :email, :class => "uk-width-1-1", :placeholder => "Email", autofocus: true %>
  </div>

  <div class="uk-form-row">
  <%= f.password_field :password, :class => "uk-width-1-1", :placeholder => "Password", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="uk-form-row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="uk-form-row">
    <%=  f.submit value: 'Log in',  class: 'uk-button' %>
  </div>
  </form>
<% end %>

<%= render "devise/shared/links" %>
