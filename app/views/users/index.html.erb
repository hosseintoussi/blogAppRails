<h1>Listing Users</h1>
<%= render 'search' %>
<table class="uk-table uk-link-muted uk-width-small">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td ><%= user.email.capitalize %></td>
      <td ><%= user.role.name.capitalize %></td>
      <td >
        <%= link_to '', edit_user_path(user), class: "uk-icon-pencil" %>
        <span> | </span>
        <%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "uk-icon-trash" %>

      </td>
      </tr>
    <% end %>
  </tbody>
</table>

