<%= form_for @user, :html => {:class => 'uk-form'}  do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %>
prohibited this user from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="uk-form-row">
  <%= f.text_field :email, :class => "uk-width-1-1", :placeholder => "Email"%>
  </div>
    <div class="uk-form-row">
  <%= select_tag "user[role_id]", options_from_collection_for_select(Role.all, "id", "name", @user.role_id), class: "select2",  style: "width: 100%"%>
</div>
   <div class="uk-form-row">
      <%= f.password_field :password, :class => "uk-width-1-1", :placeholder => "Password"%>
  </div>
  <div class="uk-form-row">
      <%= f.password_field :password, :class => "uk-width-1-1", :placeholder => "Password confirmation"%>
  </div>
   <div class="uk-form-row">
    <%= f.submit class: 'uk-button'%>
  </div>
<% end %>